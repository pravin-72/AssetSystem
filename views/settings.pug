form(action="/settings" method="POST")
  .mb-3
    label(for="username") Username
    input.form-control(type="text" name="username" id="username" value=user.username required readonly) 
  .mb-3
    label(for="password") Password
    input.form-control(type="password" name="password" id="password" value=user.password required)
  button.btn.btn-primary(type="submit") Update
