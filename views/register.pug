doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Register
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css")
    style.
      body {
        background: linear-gradient(135deg, #6c63ff, #92dff3);
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
      }
      .card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
      }
      .btn-primary {
        background: #6c63ff;
        border: none;
      }
      .btn-primary:hover {
        background: #4a41cc;
      }
      a {
        color: #6c63ff;
        text-decoration: none;
      }
      a:hover {
        text-decoration: underline;
      }
  body
    .container
      .row.justify-content-center
        .col-md-4
          .card
            .card-body
              h2.text-center.mb-4.text-primary Register
              form(action="/register" method="POST")
                .mb-3
                  label(for="username" class="form-label") Username
                  input#username.form-control(type="text" name="username" placeholder="Choose a username" required)
               
                .mb-3
                  label(for="password" class="form-label") Password
                  input#password.form-control(type="password" name="password" placeholder="Create a password" required)
               
                button.btn.btn-primary.w-100(type="submit") Register
              .text-center.mt-3
                a(href="/login") Already have an account? Login here
