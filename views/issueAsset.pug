extends layout 

block content
    .container.mt-5
      h1 Issue Asset
      form(method="POST" action="/assets/issue")
        .form-group
          label(for="employeeName") Select Employee
          select.form-control(name="employeeName" id="employeeName")
            option(value="Johan Doe") Johan Doe
            option(value="Jane Smith") Jane Smith
            option(value="Mark Johnson") Mark Johnson
            option(value="Lucy Brown") Lucy Brown
            option(value="Emma Wilson") Emma Wilson
        .form-group
          label(for="assetId") Asset ID
          input.form-control(type="text" name="assetId" id="assetId" required)
        .form-group
          label(for="comments") Comments
          textarea.form-control(name="comments" id="comments" rows="3")
        button.btn.btn-primary(type="submit") Submit
      hr
      h2 Issued Assets
      table.table.table-striped
        thead
          tr
            th Employee Name
            th Asset ID
            th Comments
        tbody(id="assetTable")
          if logs && logs.length
            each log in logs
              tr
                td= log.employee_name
                td= log.asset_id
                td= log.comments
          else
            tr
              td(colspan="3") No records found