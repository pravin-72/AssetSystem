doctype html
html
  head
    title Profile
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js")
  body
    .container
      h1 Profile
      form(method="post", action="/profile")
        .mb-3
          label(for="name") Name
          input#name.form-control(type="text", name="name", value=employee.name)
        .mb-3
          label(for="email") Email
          input#email.form-control(type="email", name="email", value=employee.email)
        .mb-3
          label(for="password") Password
          input#password.form-control(type="password", name="password", value=employee.password)
        button.btn.btn-primary(type="submit") Update
      a.btn.btn-secondary(href="/logout") Logout
